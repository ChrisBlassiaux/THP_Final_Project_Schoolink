<%= form_tag url_for(action: 'create'), method: "post" do %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group mb-3 mt-3">
    <%= label_tag 'Titre (max. 40 caractères)' %>
    <%= text_field_tag 'title', @subject.title, class:"form-control" %>
  </div>

  <div class="form-group mb-3 mt-3">
    <%= text_area_tag 'content', @subject.content, class:"form-control", rows:"30", id:"editor" %>
  </div>

<div class="row">
  <div class="field create-btn-resource">
      <%= select_tag(:category_id, options_for_select(@categories.map {|u|[u.name,u.id]}), :class => "btn btn-danger-gradiant create-btn", include_blank: "Catégorie") %>
    </div>
  
    <div class="field create-btn-resource">
      <%= select_tag(:difficulty, options_for_select(['Débutant', 'Intermédiaire', 'Avancé']), :class => "btn btn-secondary create-btn", include_blank: "Difficulté") %>
    </div>

    <div class="actions ml-auto create-btn-resource">
      <%= button_tag(type: 'submit', :class => 'btn btn-danger-gradiant btn-arrow create-btn', id: 'validForm') do %>
        <span class="white-text pl-5 pr-5">Créer </span>
      <% end %>
    </div>
  </div>
<% end %>

<script>
    var editor = new FroalaEditor('#editor', {
    toolbarButtons: ['paragraphFormat', '|', 'bold', 'italic', 'underline','|', 'textColor', 'backgroundColor', 'emoticons', '|', 'alignLeft', 'alignCenter', 'formatOLSimple', '|', 'insertLink', 'insertVideo', '|', 'undo', 'redo', 'codeView'],
    paragraphFormatSelection: true
    
      })
</script>