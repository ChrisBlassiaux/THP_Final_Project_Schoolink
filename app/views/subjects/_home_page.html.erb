<div class="feature4 mb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 text-center">
        <h2 class="title">Recherche</h2>
        <h6 class="subtitle">Affinez votre recherche à l’aide de ces deux elements de recherche</h6>
      </div>
    </div>

    <div class="block-search mt-5">
      <div class="text-center">
        <div class="btn-group">
          <%= form_tag subjects_path, method: 'GET', :class => "pl-5 pr-5" do %>
          <%= collection_select(:category, :name, Category.all, :name, :name, {include_blank: "Catégorie"}, :class => "btn btn-primary mr-5")%>
          <%= button_tag 'Rechercher', :class => 'btn btn-secondary'%>
          <% end %>
        </div>
        <div class="btn-group">
          <%= form_tag subjects_path, method: 'GET' do %>
          <%= button_tag 'Reset', :class => 'btn btn-secondary'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="feature20 up mb-5">

  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h2 class="title">Les ressources trouvées</h2>
      </div>
    </div>


    <div class="row wrap-feature-20">
      <% @subjects.each do |subject| %>
      <div class="col-lg-6" data-aos="flip-left" data-aos-duration="1200">
        <div class="card shadow bg-light">
          <div class="row">
            <div class="col-md-8">
              <div class="card-body d-flex no-block">
                <div class="w-100">
                  <h5 class="font-medium mb-0"><%= subject.title %></h5>
                  <small>
                    <p><%= @users.find_by(id:subject.user_id).nickname %></p>
                  </small>
                  <div class="row">
                    <h6 class="text-success mb-0 ml-3"><%= subject.difficulty %></h6>
                    <h6 class="text-success mb-0 ml-4"><%= subject.category %></h6>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4 text-center">
              <a href=<%= subject_path(subject.id) %> class="text-white linking bg-success-gradiant"> Voir plus <i class="ti-arrow-right"></i></a>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>