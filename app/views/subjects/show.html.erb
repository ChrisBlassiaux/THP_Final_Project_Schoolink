<div class="spacer-show feature4">
  <div class="container">
    <div class="row mt-5">
      <div class="ml-3 mr-3 w-100">
        <div class="card card-shadow">
          <div class="card-body">
            <div class="card-body">
              <h2 class="font-weight-bold title-subject"><%= @subject.title %></h2>
              <div class="row intro-subject">
                <div class="fav-contain" id="fav-container">
                  <% if JoinFavSubject.all.length > 0 %>
                    <% JoinFavSubject.all.each do |fav| %>
                      <% if fav.user_id == fav.subject_id %>
                        <%= render 'join_fav_subject/fav_true' %>
                      <% else %>
                        <%= render 'join_fav_subject/fav_false' %>
                      <% end %>
                    <% end %>
                  <% else %>
                     <%= render 'join_fav_subject/fav_true' %>
                  <% end %>
                </div>
                <h5 class="p-2 mr-2"><strong><%= @subject.category %></strong></h5>
                <h5 class="border border-dark p-2"><strong><%= @subject.difficulty %></strong></h5>
              </div>
            
              <hr>
              <%= markdown(@subject.content) %>
              <blockquote>Ecrit par <%= link_to @subject.user_nickname, user_path(@subject.user_slug) %></blockquote>
            </div>
            <div class="card-footer">
              <div class="row justify-content-end">
                <div class="rating">
                </div>
                <h6 class="mt-3 text-success"></h6>
                <div class="mt-2" id="container-read">
                  <% if JoinReadSubject.all.length > 0 %>
                    <% JoinReadSubject.all.each do |read| %>
                      <% if read.user_id == read.subject_id %>
                        <%= render 'join_read_subject/read_true' %>
                      <% else %>
                        <%= render 'join_read_subject/read_false' %>
                      <% end %>
                    <% end %>
                  <% else %>
                     <%= render 'join_read_subject/read_true' %>
                  <% end %>
                </div>
                <div class="mt-2" id="container-validate">
                  <% if JoinValidateSubject.all.length > 0 %>
                    <% JoinValidateSubject.all.each do |validate| %>
                      <% if validate.user_id == validate.subject_id %>
                        <%= render 'join_validate_subject/validate_true' %>
                      <% else %>
                        <%= render 'join_validate_subject/validate_false' %>
                      <% end %>
                    <% end %>
                  <% else %>
                     <%= render 'join_validate_subject/validate_true' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="text-center">
      <% if current_user.id == @subject.user_id %>
        <%= link_to 'Supprimer', subject_path(@subject.id), method: :delete, data: {confirm: 'Es-tu sÃ»r de vouloir supprimer cette ressource ?'}, class:"btn btn-outline-danger" %>
        <%= link_to 'Modifier', edit_subject_path(@subject), class:"btn btn-outline-secondary" %>
      <% end %>
        <%= link_to 'Retour', subjects_path, class:"btn btn-outline-secondary mb-3" %>
    </div>
  </div>


  <div class="bg-light spacer up">
    <div class="container">
    <div class="text-center">
      <div class="row justify-content-center">
        <div>
          <div class="wrap-feature4-box float-left mb-4">
            <% if @user.profile_pic.attached? %>
            <span><%= image_tag @user.profile_pic, alt: 'profile_pic', class:"img_sizing mr-5" %></span>
            <%else%>
            <div class="no_img_sizing bg-light-info text-center"><i class="fa fa-user fa-5x"></i></div>
            <% end %>
          </div>
          <p class="title">Auteur</p>
          <h2 class="title"><%= @user.nickname.upcase %></h2>
          <h6 class="blockquote-footer"><%= @user.description %></h6>
          <div class="block-search mt-5">
            <div class="btn-group">
              <%= link_to "Voir profil", user_path(@user.id), class:"btn btn-primary" %>
            </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
