<!-- ressources favorites -->
<div class="mini-spacer feature20 up mb-5">
  <div class="container">
      <div class="row wrap-feature-20">
        <% if JoinFavSubject.find_by(user_id: @user.id) == nil %>
          <span class="card-text mb-4"> Vous n'avez pas encore de ressources favorites </span>
        <% else %>
          <% JoinFavSubject.all.each do |favsubject| %>
              <% if joinfavsubject.user_id == current_user.id %>
                <div class="col-lg-6" data-aos="flip-left" data-aos-duration="1200">
                  <div class="card shadow bg-light">
                    <div class="row">
                      <div class="col-md-8">
                        <div class="card-body d-flex no-block">
                          <div class="w-100">
                              <h5 class="font-medium mb-0"><%= joinfavsubject.title %></h5>
                                <small><p>joinfavsubject.user_id</p></small>
                            <div class="row">
                              <h6 class="text-success mb-0 ml-3"><%= joinfavsubject.difficulty %></h6>
                              <h6 class="text-success mb-0 ml-4"><%= Category.find(SubCategory.find(subject.sub_category_id).category_id).name %></h6>
                              <h6 class="text-success mb-0 ml-auto mr-3">4/5</h6>
                            </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-4 text-center">
                          <a href=<%= subject_path(subject.id) %> class="text-white linking bg-success-gradiant"> Voir plus <i class="ti-arrow-right"></i></a>
                        </div>
                      </div>
                    </div>
                  </div>
              <% end %>
            <% end %>
        <% end %>
    </div>
  </div>
</div>