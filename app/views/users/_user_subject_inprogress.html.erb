
<!-- ressources en cours -->
<div class="mini-spacer feature20 up mb-5">
  <div class="container">
      <div class="row wrap-feature-20">
        <% if JoinReadSubject.find_by(user_id: @user.id) == nil %>
          <span class="card-text mb-4"> Vous n'avez pas encore de ressources en cours </span>
        <% else %>
          <% JoinReadSubject.all.each do |readsubject| %>
              <% if readsubject.user_id == current_user.id %>
                <% subject = Subject.find_by(id: readsubject.subject_id) %>
                <div class="col-lg-6" data-aos="flip-left" data-aos-duration="1200">
                  <div class="card shadow bg-light">
                    <div class="row">
                      <div class="col-md-8">
                        <div class="card-body d-flex no-block">
                          <div class="w-100">
                              <h5 class="font-medium mb-0"><%= subject.title %></h5>
                                <small><p><%= subject.user.nickname%></p></small>
                            <div class="row">
                              <h6 class="text-success mb-0 ml-3"><%= subject.difficulty %></h6>
                              <h6 class="text-success mb-0 ml-4"><%= subject.category %></h6>
                              <h6 class="text-success mb-0 ml-auto mr-3"></h6>
                            </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-4 text-center">
                          <a href=<%= subject_path(subject.slug) %> class="text-white linking bg-success-gradiant"> Voir plus <i class="ti-arrow-right"></i></a>
                        </div>
                      </div>
                    </div>
                  </div>
              <% end %>
            <% end %>
        <% end %>
    </div>
  </div>
</div>