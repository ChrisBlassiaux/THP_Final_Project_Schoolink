<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-md-7 text-center">
      <h1 class="title font-bold">S'identifier</h1>
      <h6 class="subtitle">Renseignez vos identifiants.</h6>
    </div>
  </div>        
</div>    
<div class="container pt-5">
  <div class="row">
    <div class="col-md-12">
      <form class="row">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group col-md-6">
            <%= f.label :pseudonyme %>
            <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="form-group col-md-6">
            <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "votre mot de passe" %>
          </div>
          <div class="form-group col-md-12">
            <div class="checkbox checkbox-success">
              <%= f.check_box :remember_me %>
              <%= f.label :Se_souvenir_de_moi %>
            </div>
          </div>
          <div class="col-md-12 pb-5">
              <%= f.submit "Se connecter", class: "btn btn-success waves-effect waves-light m-r-10" %>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
      </form>
        </div>
    </div>
  </div>
</div>