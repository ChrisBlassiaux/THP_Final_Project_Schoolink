<div class="spacer mb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 text-center">
        <h1 class="title font-bold mb-5">Changez votre mot de passe</h1>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="field mt-5">
              <%= f.label :password, "Nouveau mot de passe" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="field mt-5">
              <%= f.label :password_confirmation, "Confirmez votre nouveau mot de passe" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="form-group col-md-12">
              <%= f.submit "Changer mon mot de passe", class:"btn btn-primary m-r-10 actions mb-3 mt-5" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
