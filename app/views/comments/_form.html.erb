<div class="add-comment">
    <h4 class="text-center my-3">Ajoutez un commentaire</h4>

    <%= form_for [@subject, Comment.new] do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :commentable_type, :value => "Subject" %>
    <%= f.hidden_field :commentable_id, :value => @subject.id %>
    <%= f.text_area :content,  class:"form-control", placeholder: "Votre commentaire.." %><br/>
    <div class="text-right">
        <%= f.submit "Ajoutez votre commentaire", :class => 'btn btn-danger' %>
    </div>
    <% end %>
</div>

