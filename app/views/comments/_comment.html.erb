  <% if comment.user.profile_pic.attached? %>
  <div class="media"> <%= image_tag comment.user.profile_pic, alt: 'profile_pic', class:"mr-3 rounded-circle" %>
    <% else %>
    <div class="media"> <%= image_tag "https://res.cloudinary.com/dkeq1ghol/image/upload/v1592215464/avatar.png", alt: 'profile_pic', class:"mr-3 rounded-circle" %>
      <% end %>
      <div class="media-body">
        <div class="row">
          <div class="col-8 d-flex">
            <h5><%= comment.user.nickname%></h5> <span>- <%= time_ago_in_words(comment.created_at) %></span>
          </div>
          <div class="col-4">
            <div class="pull-right reply"> <a href="#"><span><i class="fa fa-reply"></i> répondre</span></a> </div>
            <% if current_user.id == comment.user_id %>
            <%= link_to fa_icon("trash", style: 'color: Tomato').html_safe, [comment.subject,comment], method: :delete, data: { confirm: 'Êtes-vous certain(e) de vouloir supprimer votre commentaire ?' }, class: 'pull-right mr-3' %>
            <% end %>
          </div>
        </div> <%= comment.content %>
        <%= render comment.answers %>
      </div>
    </div>