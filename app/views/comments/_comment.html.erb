<div class="row">
  <div class="col-md-12">
    <% if comment.user.profile_pic.attached? %>
    <div class="media"> <%= image_tag comment.user.profile_pic, alt: 'profile_pic', class:"mr-3 rounded-circle" %>
    <% else %>
    <div class="media"> <%= image_tag "https://res.cloudinary.com/dkeq1ghol/image/upload/v1592215464/avatar.png", alt: 'profile_pic', class:"mr-3 rounded-circle" %>
    <% end %>
      <div class="media-body">
        <div class="row">
          <div class="col-8 d-flex">
            <h5><%= comment.user.nickname%></h5> <span>- <%= time_ago_in_words(comment.created_at) %></span>
          </div>
          <div class="col-4">
            <div class="pull-right reply">
              <% if comment.commentable_type == "Subject" %>
              <a data-toggle="collapse" href="<%= "#Collapse#{comment.id}" %>" role="button" aria-expanded="false" aria-controls="Collapse2"><span><i class="fa fa-reply"></i> r√©pondre</span></a>
              <% end %>
            </div>
          </div>
        </div> <%= comment.content %>

        <%= render comment.comments %>

        <div class="collapse" id="<%= "Collapse#{comment.id}" %>">
          <div class="card card-body">

            <div class="col-8">
              <%= form_for [@commentable, Comment.new] do |f| %>
              <%= f.hidden_field :user_id, :value => current_user.id %>
              <%= f.hidden_field :commentable_type, :value => "Comment" %>
              <%= f.hidden_field :comment_id, :value => comment.id %>
              <%= f.hidden_field :commentable_id, :value => comment.id %>
              <%= f.text_area :content,  class:"form-control", placeholder: "Votre commentaire.." %><br />
              <%= f.submit "Ajoutez votre commentaire", :class => 'btn btn-success btn-block w-50 float-right' %>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>