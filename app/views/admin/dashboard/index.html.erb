<div class="bg-light spacer">
  <div class="container">
    <h1 class="title text-center">Dashboard Administrateur</h1>
    <div class="row my-5">
      <div class="col-md-12 justify-content-center">
        <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active" id="pills-ressources-tab" data-toggle="pill" href="#pills-ressources" role="tab" aria-controls="pills-ressources" aria-selected="false">Ressources <span class="label label-rounded label-light-primary"><%= Subject.all.length %></span></a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Utilisateurs <span class="label label-rounded label-light-primary"><%= User.all.length %></span></a>
          </li>
        </ul>
        <div class="tab-content mt-5" id="pills-tabContent">
          <div class="tab-pane fade show active" id="pills-ressources" role="tabpanel" aria-labelledby="pills-ressources-tab">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th># ID</th>
                    <th>Créateur</th>
                    <th>Titre</th>
                    <th>Likes</th>
                    <th>Actions</th>
                    <th>Etat</th>
                  </tr>
                </thead>
                <tbody>
                <% favorites = Subject.all.sort_by{ |likes| likes.how_many_fav?} %>
                <% favorites.reverse.each do |subject| %>
                  <tr>
                    <td><span class="label label-rounded label-info"><%= subject.id %></span> </td>
                    <td>@<%= subject.user.nickname %></td>
                    <td>
                      <%= if subject.title.length > 50 
                          subject.title[0..50] + '[..]'
                        else 
                        subject.title
                        end %>
                    </td>
                    <td><%= subject.how_many_fav? %> </td>
                    <td><%= link_to fa_icon('wrench').html_safe, edit_admin_subject_path(subject.slug), class: 'mr-3' %> <%= link_to fa_icon("trash", style: 'color: Tomato').html_safe, admin_subject_path(subject.id), method: :delete, data: {confirm: 'Es-tu sûr de vouloir supprimer cette ressource ?'} %></td>
                    <td><span class="label label-rounded label-success">En ligne</span> </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
          <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th># ID</th>
                    <th>Nickname</th>
                    <th>Nombre de Ressources Créées</th>
                    <th>Lien</th>
                    <th>Admin</th>
                  </tr>
                </thead>
                <tbody>
                  <% User.all.each do |users| %>
                  <tr>
                    <td><span class="label label-rounded label-info"><%= users.id %></span> </td>
                    <td><%= users.nickname %></td>
                    <td><%= users.subjects.length %></td>
                    <td><%= link_to "Profil", user_path(users.slug), class: 'mr-3' %></td>
                    <% if users.is_admin %>
                      <td><span class="label label-rounded label-primary">Admin</span> </td>
                    <% else %>
                      <td><span class="label label-rounded label-success">Utilisateur</span> </td>
                    <% end %>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>